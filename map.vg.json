{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "World Human Freedom 2010 - 2020",
      "fontSize": 16
    },
    "width": "container",
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/human_freedom.csv"
    },
    "params": [
      {
        "name": "year_selection",
        "value": 2020,
        "bind": {
          "input": "range",
          "min": 2010,
          "max": 2020,
          "step": 1,
          "name": "Year Selection: "
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/WorldMapWithGraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "white"}
      },
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/oceans.json",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "LightBlue"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "darkgrey", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/human_freedom.csv"
        },
        "projection": {"type": "equalEarth"},
        "transform": [
          {
            "lookup": "countries",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/ne_110m_admin_0_countries.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          },
          {"filter": "datum.year == year_selection"},
          {
            "calculate": "datum[hf_score]",
            "as": "Selected Year"
          },
          {
            "bin": {"step": 10, "extent": [0, 100000000]},
            "field": "Selected Year",
            "as": "magnitude"
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color": {
            "field": "magnitude",
            "type": "quantitative",
            "scale": {"type": "quantize", "scheme": "darkblue-5"},
            "legend": {
              "title": "World Human Freedom Score",
              "titleLimit": 320,
              "titleFontSize": 13,
              "direction": "horizontal",
              "orient": "bottom"
            }
          },
          "tooltip": [
            {"field": "countries", "type": "nominal", "title": "Countries"},
            {
              "field": "hf_score",
              "type": "nominal",
              "title": "Human Freedom Score",
              "format": ",.2f"
            }
          ]
        }
      }
    ]
  }