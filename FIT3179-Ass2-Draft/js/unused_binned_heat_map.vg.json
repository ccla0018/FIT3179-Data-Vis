{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/FIT3179-Ass2-Draft/data/hfi_cc_2022.csv",
    "format": {"type": "csv"}
  },
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "region",
      "type": "nominal",
      "sort": "x",
      "title": "Region"
    },
    "y": {
      "field": "ef_government_consumption_data",
      "type": "quantitative",
      "sort": "-y",
      "title": "Government Consumption"
    },
    "color": {
      "field": "ef_government_investment_data",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": {"title": "Government Investment"}
    },
    "tooltip": [
      {"field": "region", "title": "Region"},
      {"field": "ef_government_consumption_data", "title": "Government Consumption"},
      {"field": "ef_government_investment_data", "title": "Government Spending"}
    ]
  },
  "config": {
    "axis": {"grid": true, "tickBand": "extent"}
  }
}
