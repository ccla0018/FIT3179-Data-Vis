{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/FIT3179-Ass2-Draft/data/hfi_cc_2022_region.csv"
  },
  "params": [
    {
      "name": "selected_region",
      "value": "Worldwide",
      "bind": {
        "input": "select",
        "options": [
          "Worldwide",
          "Asia Pacific",
          "Europe",
          "Americas",
          "Middle East/Africa"
        ],
        "name": "Select a Region: "
      }
    },
    {
      "name": "economy_measures",
      "value": "ef_money",
      "bind": {
        "input": "select",
        "options": [
          "ef_money",
          "ef_legal",
          "ef_government",
          "ef_regulation",
          "ef_trade"
        ],
        "labels": [
          "Money Rights",
          "Legal",
          "Limited Government Rights",
          "Regulatory Efficiency",
          "Open Markets / Trade"
        ],
        "name": "Selected Economic Measure: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 500,
      "height": 300,
      "transform": [
        {
          "filter": "selected_region === 'Worldwide' || datum.region === selected_region"
        },
        {
          "calculate": "datum[economy_measures]",
          "as": "Selected Economic Measure"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Selected Economic Measure",
          "type": "quantitative",
          "title": "Selected Economy Measure Score",
          "scale": { "domain": [0, 10] }
        },
        "color": {
          "condition": {
            "test": "selected_region != 'Test'",
            "field": "region",
            "type": "nominal",
            "title": "Region",
            "scale": {
              "domain": ["Worldwide", "Asia Pacific", "Europe", "Americas", "Middle East/Africa"],
              "range": ["#555555", "#1f77b4", "#ffb400", "#776bcd", "#d62728"]
            }
          },
          "value": "#555555"
        },
        "tooltip": [
          { "field": "countries", "type": "nominal", "title": "Country" },
          { "field": "region", "type": "nominal", "title": "Region" },
          {
            "field": "Selected Economic Measure",
            "type": "quantitative",
            "title": "Score",
            "format": ",.2f"
          }
        ]
      }
    },
    {
      "hconcat": [
        {
          "width": 195,
          "height": 100,
          "title": "Top 5 Countries",
          "transform": [
            {
              "filter": "selected_region === 'Worldwide' || datum.region === selected_region"
            },
            {
              "calculate": "datum[economy_measures]",
              "as": "Selected Economic Measure"
            },
            {
              "aggregate": [
                { "op": "average", "field": "Selected Economic Measure", "as": "average_economy_measure" }
              ],
              "groupby": ["countries", "region"]
            },
            {
              "window": [{ "op": "rank", "as": "desc_rank" }],
              "sort": [{ "field": "average_economy_measure", "order": "descending" }]
            },
            {
              "filter": "datum.desc_rank <= 5"
            }
          ],
          "layer": 
          [
            {
              "mark": 
              {
                "type": "bar",
                "opacity": 0.7
              },
            "encoding": {
              "x": {
                "field": "average_economy_measure",
                "type": "quantitative",
                "title": "Selected Economic Measure Score",
                "scale": { "domain": [0, 10] }
              },
              "y": {
                "field": "countries",
                "type": "nominal",
                "title": "Country",
                "sort": "-x"
              },
              "color": {
                "field": "region",
                "type": "nominal",
                "title": "Region",
                "scale": {
                  "domain": ["Worldwide", "Asia Pacific", "Europe", "Americas", "Middle East/Africa"],
                  "range": ["#555555", "#1f77b4", "#ffb400", "#776bcd", "#d62728"]
                }
              },
              "tooltip": [
                { "field": "countries", "type": "nominal", "title": "Country" },
                { "field": "region", "type": "nominal", "title": "Region" },
                { "field": "average_economy_measure", "type": "quantitative", "title": "Average Score" }
              ],
              "label": { "field": "countries" } 
              }
            }
          ]
        },
        {
          "width": 195,
          "height": 100,
          "title": "Bottom 5 Countries",
          "transform": [
            {
              "filter": "selected_region === 'Worldwide' || datum.region === selected_region"
            },
            {
              "calculate": "datum[economy_measures]",
              "as": "Selected Economic Measure"
            },
            {
              "aggregate": [
                { "op": "average", "field": "Selected Economic Measure", "as": "average_economy_measure" }
              ],
              "groupby": ["countries", "region"]
            },
            {
              "window": [{ "op": "rank", "as": "asc_rank" }],
              "sort": [{ "field": "average_economy_measure", "order": "ascending" }]
            },
            {
              "filter": "datum.asc_rank <= 5"
            }
          ],
          "layer": [
            {
              "mark": {
                "type": "bar",
                "opacity": 0.7
              },
              "encoding": {
                "x": {
                  "field": "average_economy_measure",
                  "type": "quantitative",
                  "title": "Selected Economic Measure Score",
                  "scale": { "domain": [0, 10] }
                },
                "y": {
                  "field": "countries",
                  "type": "nominal",
                  "sort": "x",
                  "title": ""
                },
                "color": {
                  "field": "region",
                  "type": "nominal",
                  "title": "Region",
                  "scale": {
                    "domain": ["Worldwide", "Asia Pacific", "Europe", "Americas", "Middle East/Africa"],
                    "range": ["#555555", "#1f77b4", "#ffb400", "#776bcd", "#d62728"]
                  }
                },
                "tooltip": [
                  { "field": "countries", "type": "nominal", "title": "Country" },
                  { "field": "region", "type": "nominal", "title": "Region" },
                  { "field": "average_economy_measure", "type": "quantitative", "title": "Average Score" }
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
