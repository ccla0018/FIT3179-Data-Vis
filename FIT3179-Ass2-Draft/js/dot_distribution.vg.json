{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/FIT3179-Ass2-Draft/data/hfi_cc_2022.csv"
  },
  "width": 500,
  "height": 300,
  "params": [
    {
      "name": "economy_measures",
      "value": "ef_money",
      "bind": {
        "input": "select",
        "options": [
          "ef_money",
          "ef_legal",
          "ef_government",
          "ef_regulation",
          "ef_trade"
        ],
        "labels": [
          "Money Rights",
          "Legal",
          "Limited Government Rights",
          "Regulatory Efficiency",
          "Open Markets / Trade"
        ],
        "name": "Selected Economic Measure: "
      }
    },
    {
      "name": "selected_region",
      "value": "Worldwide",  
      "bind": {
        "input": "select",
        "options": [
          "Worldwide",
          "Asia Pacific",
          "Europe",
          "Americas",
          "Middle East/Africa"
        ],
        "name": "Select a Region: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/FIT3179-Ass2-Draft/data/hfi_cc_2022.csv"
      },
      "transform": [
        {
          "filter": "selected_region === 'Worldwide' || datum.region === selected_region"
        },
        {
          "calculate": "datum[economy_measures]",
          "as": "Selected Economic Measure"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Selected Economic Measure",
          "type": "quantitative",
          "title": "Economy Measure",
          "scale": {"domain": [0, 10]}
        },
        "color": {
          "condition": {
            "test": "selected_region !== 'Worldwide'",
            "field": "region",
            "type": "nominal",
            "title": "Region",
            "scale": {
              "domain": ["Worldwide", "Asia Pacific", "Europe", "Americas", "Middle East/Africa"],
              "range": ["#555555", "#1f77b4", "#ff7f0e", "#2ca02c", "#d62728"]
            }
          },
          "value": "#555555" 
        },
        "tooltip": [
          {"field": "countries", "type": "nominal", "title": "Country"},
          {"field": "region", "type": "nominal", "title": "Region"},
          {
            "field": "Selected Economic Measure",
            "type": "quantitative",
            "title": "Score",
            "format": ",.2f"
          }
        ]
      }
    }
  ]
}
