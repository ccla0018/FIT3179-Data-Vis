{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/draft/data/hfi_cc_2022.csv"
  },
  "width": 500,
  "height": 300,
  "params": [
    {
      "name": "economy_measures",
      "value": "ef_money",
      "bind": {
        "input": "select",
        "options": [
          "ef_money",
          "ef_legal",
          "ef_government",
          "ef_regulation",
          "ef_trade"
        ],
        "labels": [
          "Money Rights",
          "Legal",
          "Limited Government Rights",
          "Regulatory Efficiency",
          "Open Markets / Trade"
        ],
        "name": "Selected Economic Measure: "
      }
    },
    {
      "name": "selected_region",
      "value": "Show All",  
      "bind": {
        "input": "select",
        "options": [
          "Show All",
          "Asia Pacific",
          "Europe",
          "Americas",
          "Middle East/Africa"
        ],
        "name": "Select a Region: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/draft/data/hfi_cc_2022.csv"
      },
      "transform": [
        {
          "filter": "selected_region === 'Show All' || datum.region === selected_region"
        },
        {
          "calculate": "datum[economy_measures]",
          "as": "Selected Economic Measure"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Selected Economic Measure",
          "type": "quantitative",
          "title": "Economy Measure",
          "scale": {"domain": [0, 10]}
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "title": "Region",
          "scale": {
            "domain": ["Caucasus & Central Asia", "East Asia", "Eastern Europe", "Latin America & Caribbean", "Middle East & North Africa", "North America", "Oceania", "South Asia", "Sub-Saharan Africa", "Western Europe"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#17becf"]
          }
        },
        "tooltip": [
          {"field": "countries", "type": "nominal", "title": "Country"},
          {"field": "region", "type": "nominal", "title": "Region"},
          {
            "field": "Selected Economic Measure",
            "type": "quantitative",
            "title": "Score",
            "format": ",.2f"
          }
        ]
      }
    }
  ]
}
