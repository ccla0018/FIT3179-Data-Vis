{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/FIT3179-Ass2-Draft/data/hfi_cc_2022_region.csv"},
    "params": [
        {
          "name": "selected_region",
          "value": "Worldwide",
          "bind": {
            "input": "select",
            "options": [
              "Worldwide",
              "Asia Pacific",
              "Europe",
              "Americas",
              "Middle East/Africa"
            ],
            "name": "Select a Region: "
          }
        }
    ],
    "transform": [
    {
        "filter": "selected_region === 'Worldwide' || datum.region === selected_region"
        },
      {
        "filter": {"and": [
          {"field": "ef_score", "valid": true},
          {"field": "ef_money_inflation_data", "valid": true}
        ]}
      },
      {"filter": "datum.ef_money_inflation_data <= 20"},
      {"filter": "datum.ef_money_inflation_data >= -5"}
    ],
    "mark": "rect",
    "width": 325,
    "height": 300,
    "encoding": {
      "x": {
        "bin": {"maxbins": 20},
        "field": "ef_money_inflation_data",
        "type": "quantitative"
      },
      "y": {
        "bin": {"maxbins": 20},
        "field": "ef_score",
        "type": "quantitative"
      },
      "color": {
        "aggregate": "count",
        "type": "quantitative",
        "scale": {
          "scheme": "tealblues"  
        },
        "legend": {"title": "Number of Countries"} 
      },
      "tooltip": [
        {"field": "ef_legal_range", "title": "Legal Score Range"},
        {"field": "ef_money_range", "title": "Money Score Range"},
        {"aggregate": "count", "type": "quantitative", "title": "Count"}
      ]
    },
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }