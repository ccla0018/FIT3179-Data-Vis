{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/FIT3179-Ass2-Draft/data/hfi_cc_2022.csv"},
    "transform": [
      {
        "filter": "datum.year == 2020"
      },
      {
        "filter": {"and": [
          {"field": "ef_government_consumption_data", "valid": true},
          {"field": "ef_government_investment_data", "valid": true}
        ]}
      }
    ],
    "mark": "rect",
    "width": 325,
    "height": 300,
    "encoding": {
      "x": {
        "bin": {"maxbins": 10},
        "field": "ef_government_consumption_data",
        "type": "quantitative",
        "title": "Government Consumption (% of GDP)"
      },
      "y": {
        "bin": {"maxbins": 10},
        "field": "ef_government_investment_data",
        "type": "quantitative",
        "title": "Government Investment (% of GDP)"
      },
      "color": {
        "aggregate": "count",
        "type": "quantitative",
        "scale": {
          "scheme": "blues"  
        },
        "legend": {"title": "Number of Countries"} 
      },
      "tooltip": [
        {"field": "ef_government_consumption_range", "title": "Consumption (% of GDP)"},
        {"field": "ef_government_investment_range", "title": "Investment (% of GDP)"},
        {"aggregate": "count", "type": "quantitative", "title": "Count"}
      ]
    },
    "config": {
      "view": {
        "stroke": "white"
      },
      "axis": {"grid": true, "tickBand": "extent", "gridColor": "white"}
    }
  }