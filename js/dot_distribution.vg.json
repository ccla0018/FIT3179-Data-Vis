{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/data/hfi_cc_2022.csv"
    },
    "width": 600,
    "height": 400,
    "params": [
      {
        "name": "year_selection",
        "value": "2020",
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2020,
          "step": 1,
          "name": "Year: "
        }
      },
      {
        "name": "economy_measures",
        "value": "ef_money",
        "bind": {
          "input": "select",
          "options": [
            "ef_money",
            "ef_legal",
            "ef_government",
            "ef_regulation",
            "ef_trade"
          ],
          "labels": [
            "Money Rights",
            "Legal",
            "Limited Government Rights",
            "Regulatory Efficiency",
            "Open Markets / Trade"
          ],
          "name": "Selected Economic Measure: "
        }
      }
    ],
    "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/data/hfi_cc_2022.csv"
          },
          "transform": [
            {"filter": "datum.year == year_selection"},
            {
              "calculate": "datum[ef_money]",
              "as": "Selected Economic Measure"
            }
          ]
        }
    ],
    "mark": {
      "type": "circle",
      "opacity": 0.7
    },
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "title": "Year"
      },
      "y": {
        "field": "economy_measures",
        "type": "quantitative",
        "title": "Economy Measure",
        "scale": {"domain": [0, 10]}
      },
      "color": {
        "field": "countries",
        "type": "nominal",
        "title": "Country"
      }
    }
  }
  