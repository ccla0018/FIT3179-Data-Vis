{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/data/hfi_cc_2022.csv"
  },
  "width": 600,
  "height": 400,
  "params": [
    {
      "name": "economy_measures",
      "value": "ef_money",
      "bind": {
        "input": "select",
        "options": [
          "ef_money",
          "ef_legal",
          "ef_government",
          "ef_regulation",
          "ef_trade"
        ],
        "labels": [
          "Money Rights",
          "Legal",
          "Limited Government Rights",
          "Regulatory Efficiency",
          "Open Markets / Trade"
        ],
        "name": "Selected Economic Measure: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/data/hfi_cc_2022.csv"
      },
      "transform": [
        {
          "calculate": "datum[economy_measures]",
          "as": "Selected Economic Measure"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Selected Economic Measure",
          "type": "quantitative",
          "title": "Economy Measure",
          "scale": {"domain": [0, 10]}
        },
        "color": {
          "field": "countries",
          "type": "nominal",
          "title": "Country"
        },
      }
    }
  ],
  "tooltip": [
    {"field": "countries", "type": "nominal", "title": "Country"},
    {
      "field": "Selected Economic Measure",
      "type": "quantitative",
      "title": "Score",
      "format": ",.2f"
    }
  ]
}
