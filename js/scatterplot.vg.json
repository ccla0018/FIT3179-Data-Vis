{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing correlation between human freedom score and economic freedom score",
  "data": {
    "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/data/freedom_score_population.csv",
    "format": {
      "type": "csv",
      "parse": {
        "hf_score": "number",
        "ef_score": "number",
        "population": "number"
      }
    }
  },
  "width": "300",
  "height": "300",
  "title": {
    "text": "Economic and Human Freedom",
    "fontSize": 16,
    "offset": 12
  },
  "params": [
    {
      "name": "year_selection",
      "value": "2020",
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 1,
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.year == year_selection"}
  ],
  "encoding": {
    "x": {
      "field": "hf_score",
      "type": "quantitative",
      "title": "Human Freedom Score"
    },
    "y": {
      "field": "ef_score",
      "type": "quantitative",
      "title": "Economic Freedom Score"
    }
  },
  "layer": [
    {
      "mark": {"type": "circle", "color": "#18288f"},
      "encoding": {
        "size": {
          "field": "population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 100000, 1000000, 50000000, 100000000, 500000000, 1000000000],
            "range": [0, 5, 10, 20, 40, 80, 160, 320]
          },
          "legend": {"format": ".1s"}
        },
        "opacity": {"value": 0.5},
        "tooltip": [
          {"field": "countries", "type": "nominal", "title": "Country"},
          {
            "field": "population",
            "type": "quantitative",
            "title": "Population",
            "format": ",.0f"
          },
          {
            "field": "hf_score",
            "type": "quantitative",
            "title": "Human Freedom",
            "format": ",.2f"
          },
          {
            "field": "ef_score",
            "type": "quantitative",
            "title": "Economic Freedom",
            "format": ",.2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "countries", "type": "nominal"},
        "color": {"value": "black"},
        "opacity":{
          "condition":{
            "test": "datum['countries']=='China' || datum['countries']=='United States of America'|| datum['countries']=='Australia'",
            "value": 1
        },
        "value": 0
        }
      }
    }
  ]
}
