{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing correlation between human freedom score and economic freedom score",
  "data": {
    "url": "https://raw.githubusercontent.com/ccla0018/FIT3179-Data-Vis/main/data/freedom_score_population.csv",
    "format": {
      "type": "csv",
      "parse": {
        "hf_score": "number",
        "ef_score": "number",
        "population": "number"
      }
    }
  },
  "width": "350",
  "height": "350",
  "params": [
    {
      "name": "year_selection",
      "value": "2020",
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2020,
        "step": 1,
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.year == year_selection"},
    {"filter": "datum.population > 0"},
    {"filter": "datum.hf_score > 0"},
    {"filter": "datum.ef_score > 0"}
  ],
  "encoding": {
    "x": {
      "field": "hf_score",
      "type": "quantitative",
      "title": "Human Freedom Score"
    },
    "y": {
      "field": "ef_score",
      "type": "quantitative",
      "title": "Economic Freedom Score"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "countries", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['countries'] == 'China' || datum['countries'] == 'Australia' || datum['countries'] == 'Singapore'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "countries", "type": "nominal", "title": "Country"},
          {
            "field": "hf_score",
            "type": "quantitative",
            "title": "Human Freedom",
            "format": ",.2f"
          },
          {
            "field": "ef_score",
            "type": "quantitative",
            "title": "Economic Freedom",
            "format": ",.2f"
          }
        ]
      }
    },
    {
      "mark": {"type": "circle", "color":"navy"},
      "encoding": {
        "size": {
          "field": "population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 100000, 1000000, 50000000, 100000000, 500000000, 1000000000],
            "range": [5, 10, 20, 40, 80, 160, 320, 640]
          },
          "legend": {"format": ".1s"}
        },
        "opacity": {"value": 0.5},
        "tooltip": [
          {"field": "countries", "type": "nominal", "title": "Country"},
          {
            "field": "hf_score",
            "type": "quantitative",
            "title": "Human Freedom",
            "format": ",.2f"
          },
          {
            "field": "ef_score",
            "type": "quantitative",
            "title": "Economic Freedom",
            "format": ",.2f"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {"y": "0", "x": "0"},
          {"y": "10", "x": "10"}
          ]
      },
      "mark": {
                "type": "line", 
                "strokeDash": [4, 1], 
                "strokeWidth": 1,
                "color": "lightslategray"
              },
      "encoding": {
        "x": {"field": "x", "type": "quantitative"},
        "y": {"field": "y", "type": "quantitative"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11,
        "font": "Arial",
        "color": "black"
      },
      "encoding": {
        "x": {"value": 335},
        "y": {"value": 325},
        "text": {
          "value": "These countries that fall below the diagonal line have"
        },
        "opacity": {"value": 1}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11,
        "font": "Arial",
        "color": "black"
      },
      "encoding": {
        "x": {"value": 335},
        "y": {"value": 335},
        "text": {
          "value": "more human freedom compared to the economic freedom"
        },
        "opacity": {"value": 1}
      }
    }
  ]
}